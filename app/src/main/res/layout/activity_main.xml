<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <FrameLayout
        android:id="@+id/frame1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/btn_ac"
        android:layout_marginBottom="15dp">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <TextView
                android:id="@+id/txt_input"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="0"
                android:textColorHint="@color/black"
                android:textSize="48sp"
                android:textColor="@color/black"
                android:gravity="end"
                app:layout_constraintEnd_toStartOf="@id/txt_operation"
                android:layout_marginEnd="15dp"
                />
            <TextView
                android:id="@+id/txt_operation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:textColor="@color/black"
                android:textSize="30sp"
                android:maxLength="1"
                app:layout_constraintEnd_toStartOf="@id/txt_input2"
                app:layout_constraintTop_toTopOf="@id/txt_input"
                android:layout_marginEnd="15dp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@id/txt_input"/>

            <TextView
                android:id="@+id/txt_input2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint=""
                android:textColorHint="@color/black"
                android:textSize="48sp"
                android:textColor="@color/black"
                android:gravity="end"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="25dp"
                app:layout_constraintBottom_toTopOf="@id/txt_output"
                />
            <TextView
                android:id="@+id/txt_output"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint=""
                android:textColorHint="@color/black"
                android:textSize="48sp"
                android:textColor="@color/black"
                android:gravity="end"
                android:visibility="gone"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginEnd="25dp"

                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_division"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/round_button2"
        android:text="@string/division"
        android:textSize="30sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toTopOf="@id/btn_multiplication"
        app:layout_constraintStart_toEndOf="@id/btn_modules"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_modules"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/round_button2"
        android:text="%"
        android:textSize="30sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toTopOf="@id/btn_9"
        app:layout_constraintStart_toEndOf="@id/btn_brackets"
        app:layout_constraintEnd_toStartOf="@id/btn_division"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_brackets"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/round_button2"
        android:text="( )"
        android:textSize="30sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toTopOf="@id/btn_8"
        app:layout_constraintStart_toEndOf="@id/btn_ac"
        app:layout_constraintEnd_toStartOf="@id/btn_modules"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_ac"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/round_button2"
        android:text="AC"
        android:textSize="30sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toTopOf="@id/btn_7"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_brackets"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_multiplication"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/round_button2"
        android:text="@string/multiplication"
        android:textSize="30sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toTopOf="@id/btn_subtraction"
        app:layout_constraintStart_toEndOf="@id/btn_9"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_9"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/round_button"
        android:text="9"
        android:textSize="30sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toTopOf="@id/btn_6"
        app:layout_constraintStart_toEndOf="@id/btn_8"
        app:layout_constraintEnd_toStartOf="@id/btn_multiplication"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_8"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/round_button"
        android:text="8"
        android:textSize="30sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toTopOf="@id/btn_5"
        app:layout_constraintStart_toEndOf="@id/btn_7"
        app:layout_constraintEnd_toStartOf="@id/btn_9"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_7"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/round_button"
        android:text="7"
        android:textSize="30sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toTopOf="@id/btn_4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/btn_8"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_subtraction"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/round_button2"
        android:text="-"
        android:textSize="30sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toTopOf="@id/btn_addition"
        app:layout_constraintStart_toEndOf="@id/btn_6"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_6"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/round_button"
        android:text="6"
        android:textSize="30sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toTopOf="@id/btn_3"
        app:layout_constraintStart_toEndOf="@id/btn_5"
        app:layout_constraintEnd_toStartOf="@id/btn_subtraction"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_5"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/round_button"
        android:text="5"
        android:textSize="30sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toTopOf="@id/btn_2"
        app:layout_constraintStart_toEndOf="@id/btn_4"
        app:layout_constraintEnd_toStartOf="@id/btn_6"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_4"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/round_button"
        android:text="4"
        android:textSize="30sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toTopOf="@id/btn_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_5"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_addition"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/round_button2"
        android:text="+"
        android:textSize="30sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toTopOf="@id/btn_equal"
        app:layout_constraintStart_toEndOf="@id/btn_3"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginEnd="10dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_3"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/round_button"
        android:text="3"
        android:textSize="30sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toTopOf="@id/btn_del"
        app:layout_constraintStart_toEndOf="@id/btn_2"
        app:layout_constraintEnd_toStartOf="@id/btn_addition"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_2"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/round_button"
        android:text="2"
        android:textSize="30sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toTopOf="@id/btn_dot"
        app:layout_constraintStart_toEndOf="@id/btn_1"
        app:layout_constraintEnd_toStartOf="@id/btn_3"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_1"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/round_button"
        android:text="1"
        android:textSize="30sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toTopOf="@id/btn_0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/btn_2"
        android:layout_marginBottom="10dp"
        android:layout_marginStart="10dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_0"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/round_button"
        android:text="0"
        android:textSize="30sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toStartOf="@id/btn_dot"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_dot"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/round_button"
        android:text="."
        android:textSize="30sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_0"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        app:layout_constraintEnd_toStartOf="@id/btn_del"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_del"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/round_button"
        android:text="Del"
        android:textSize="20sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_dot"
        app:layout_constraintEnd_toStartOf="@id/btn_equal"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        />
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_equal"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:background="@drawable/round_button2"
        android:text="="
        android:textSize="30sp"
        tools:ignore="MissingConstraints"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/btn_del"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="20dp"
        android:layout_marginEnd="10dp"
        />

